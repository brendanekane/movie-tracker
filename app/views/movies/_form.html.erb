<%= form_for(@movie) do |f| %>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <br>
  <p>
    <%= f.label :director %>
    <%= f.text_field :director %>
  </p>
  <br>
  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>
  <br>
  <p>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </p>
  <br>
  <p>
    <%= f.label :actor_list %>
    <%= f.text_field :actor_list %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
