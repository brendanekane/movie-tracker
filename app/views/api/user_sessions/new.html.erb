<%= form_with url: user_sessions_path, method: :post, local: true do %>
  <div class="input-field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="input-field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="input-action">
    <%= submit_tag "Login" %>
  </div>
<% end %>

